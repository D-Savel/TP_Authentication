doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="//unpkg.com/semantic-ui@2.4.2/dist/semantic.min.css")
        link(rel="stylesheet" href="/css/styles.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        script(src="//unpkg.com/jquery@3.1.1/dist/jquery.min.js")
        script(src="//unpkg.com/semantic-ui@2.4.2/dist/semantic.min.js")
        block scripts

        title TP_Authentication
    body

        .div(class='ui inverted menu p-2 mb-0 d-flex flew-row justify-content-between')
            .div(class='left-menu d-flex')
                a.item.active(href="/")
                    i.home.icon
                    | Home
                a.item(href="/dashboard")
                    i.icon(class=(!isLogged ? 'lock' : 'lock open'))
                    | Dashboard
            .div(class='right-menu')
                #islogged
                    if (isLogged)
                        a(class='item bg-danger' href="/sessionDestroy")
                            i.sign-out.icon
                            | Logout
                    else
                        a(class='item bg-success' href="/login")
                            i.sign-in.icon
                            | Login


        block content